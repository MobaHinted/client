<Window xmlns="https://github.com/avaloniaui" xmlns:vm="using:client.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Icon="/Assets/logo.ico" Title="MobaHinted"

        d:DesignWidth="1780" d:DesignHeight="670"
        Width="1780" Height="670"
        MinWidth="1780" MinHeight="670"

        x:Class="client.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel">

    <!-- Design time context -->
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <!-- Content -->

    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" />

    <!-- /Content -->

</Window>
